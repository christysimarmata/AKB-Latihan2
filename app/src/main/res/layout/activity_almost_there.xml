<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlmostThere"
    android:background="@color/lightblue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp">

        <TextView
            android:id="@+id/txt_almost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:text="Almost There"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />
        <TextView
            android:id="@+id/txt_baris1"
            android:layout_below="@id/txt_almost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:text="Thank you for registering with us. One more"/>
        <TextView
            android:id="@+id/txt_baris2"
            android:layout_below="@id/txt_baris1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="step, you need to check your email"/>
        <TextView
            android:id="@+id/txt_baris3"
            android:layout_below="@id/txt_baris2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="to active your account"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_verify"
            style="@style/btnbiru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_baris3"
            android:layout_marginTop="90dp"
            android:onClick="verify"
            android:text="VERIFY"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>